<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_penilai"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="#017b64"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="30dp"
            android:text="KINERJA"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="30dp" />

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/fotoutama"
                android:layout_width="252dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:src="@drawable/jww" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IAN SYAUQI AL-HAQ"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:paddingLeft="85dp"
                android:textColor="@android:color/black"
                android:paddingTop="20dp"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:paddingTop="40dp"
        android:layout_marginBottom="100dp">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_tj"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:text="Tanggung Jawab" />

                <TextView
                    android:id="@+id/tv_k"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content"
                    android:text="Kedisiplinan" />
                <TextView
                    android:id="@+id/tv_ke"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:layout_marginRight="43dp"
                    android:layout_height="wrap_content"
                    android:text="Kerapian" />
                <TextView
                    android:id="@+id/tv_ko"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:layout_marginRight="33dp"
                    android:layout_height="wrap_content"
                    android:text="Komunikasi" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RatingBar
                    android:id="@+id/rb_tj"
                    style="@style/customRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:max="5"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="50dp"
                    android:numStars="5"
                    android:rating="0" />

                <RatingBar
                    android:id="@+id/rb_k"
                    style="@style/customRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="8dp"
                    android:max="5"
                    android:numStars="5"
                    android:rating="0" />
                <RatingBar
                    android:id="@+id/rb_ke"
                    style="@style/customRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:max="5"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="50dp"
                    android:numStars="5"
                    android:rating="0" />

                <RatingBar
                    android:id="@+id/rb_ko"
                    style="@style/customRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:max="5"
                    android:numStars="5"
                    android:rating="0" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
</LinearLayout>
