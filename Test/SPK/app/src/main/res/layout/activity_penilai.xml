<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_penilai"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="#017b64"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_nilai"
                android:layout_width="123dp"
                android:layout_height="127dp"
                android:src="@drawable/jww" />

            <TextView
                android:id="@+id/tv_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="JEON WONWOO WONU"
                android:textColor="@android:color/white"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_tj"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="18dp"
                        android:layout_height="wrap_content"
                        android:text="Tanggung Jawab" />
                    <TextView
                        android:id="@+id/tv_k"
                        android:layout_width="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="18dp"
                        android:layout_height="wrap_content"
                        android:text="Kedisiplinan" />
                    <TextView
                        android:id="@+id/tv_ke"
                        android:layout_width="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="18dp"
                        android:layout_height="wrap_content"
                        android:text="Kerapian" />
                    <TextView
                        android:id="@+id/tv_ko"
                        android:layout_width="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="18dp"
                        android:layout_height="wrap_content"
                        android:text="Komunikasi" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RatingBar
                        android:id="@+id/rb_tj"
                        style="@style/customRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:max="5"
                        android:numStars="5"
                        android:rating="0" />

                    <RatingBar
                        android:id="@+id/rb_k"
                        style="@style/customRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:max="5"
                        android:numStars="5"
                        android:rating="0" />
                    <RatingBar
                        android:id="@+id/rb_ke"
                        style="@style/customRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:max="5"
                        android:numStars="5"
                        android:rating="0" />

                    <RatingBar
                        android:id="@+id/rb_ko"
                        style="@style/customRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:max="5"
                        android:numStars="5"
                        android:rating="0" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>